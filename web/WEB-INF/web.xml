<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>
            directory
        </param-name>
        <param-value>
            /WebApplication1/chap3_1
        </param-value>
    </context-param>
    <servlet>
        <servlet-name>Sample3_2</servlet-name>
        <servlet-class>chap3.Sample3_2</servlet-class>
        <init-param>
            <param-name>image</param-name>
            <param-value>pg.jpg</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Sample3_3</servlet-name>
        <servlet-class>chap3.Sample3_3</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Sample3_4</servlet-name>
        <servlet-class>chap3.Sample3_4</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Sample3_2</servlet-name>
        <url-pattern>/Sample3_2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sample3_3</servlet-name>
        <url-pattern>/Sample3_3</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sample3_4</servlet-name>
        <url-pattern>/Sample3_4</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
